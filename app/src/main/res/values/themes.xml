<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GreenGenie" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/verde</item>
        <item name="colorPrimary">@color/verde_oscuro</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azul_claro</item>
        <item name="colorSecondaryVariant">@color/caqui</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="backgroundColor">@color/white</item>
    </style>
    <style name="Bar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/verde</item>
        <item name="colorPrimary">@color/verde_oscuro</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azul_claro</item>
        <item name="colorSecondaryVariant">@color/caqui</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.GreenGenie.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GreenGenie.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GreenGenie.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>