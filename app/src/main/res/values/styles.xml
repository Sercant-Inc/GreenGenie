<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainbutton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/verde_claro</item>
    </style>

    <style name="secondary_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/verde_claro</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextinputLayout2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="buttonoutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/verde</item>
        <item name="cornerRadius">1050dip</item>
        <item name="strokeWidth">1dp</item>

    </style>
</resources>



